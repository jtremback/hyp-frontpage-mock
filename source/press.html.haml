  %title Hypothes.is | The Internet, peer reviewed.
#press.page

  .topspacer
  %h1.sectitle Press<span class="redtext">:</span>

  .press
    .pressunit.first
      .row
        .picunit.one_fourth
          %a{:href => "http://www.readwriteweb.com/archives/hypothesis.php"}
            %img{ :src => "images/press/rww2.png" }
          .caption
